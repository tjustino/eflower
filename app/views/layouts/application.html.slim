doctype html
html lang="fr"
  head
    title ℰƒℓ𝓸𝔀ℯ𝓻
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"

  body
    header.ui.vertical.header.basic.segment
      .ui.container
        .ui.three.column.middle.aligned.grid
          .left.floated.left.aligned.column
            p 🕑 Ouvert aujourd'hui jusqu'à 19h30
          .center.aligned.column
            h1 = link_to "La fontaine aux fleurs", root_path
          .right.floated.right.aligned.column
            = link_to "📞 02 41 78 31 87", "tel:0241783187"

    section.ui.vertical.section.basic.segment
      .ui.container
        = yield

    footer.ui.vertical.footer.basic.segment
      .ui.center.aligned.container
        .ui.section.divider
        .ui.horizontal.small.divided.link.list
          = link_to "CGV", "#", class: "item"
          = link_to "Politique de confidentialité", "#", class: "item"
          = link_to "Contact", "#", class: "item"

      - if Rails.env.development?
        #debug.ui.vertical.segment
          .ui.compact.mini.yellow.message
            i.close.icon
            / i.bug.icon → https://github.com/Semantic-Org/Semantic-UI/issues/4759
            .content
              = debug(params)
